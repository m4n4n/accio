  <div id="loginmodal" class="modal">
    <div class="modal-content">
      <h4>Login</h4>
        <div class="row">
        <form class="col s12" id="loginform">
          <div class="row">
            <div class="input-field col s12">
              <input id="loginemail" type="email" name="email" class="validate">
              <label for="loginemail">Email</label>
              <span class="helper-text" data-error="Please enter a valid email"></span>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <input id="loginpassword" type="password"  name="password" class="validate">
              <label for="loginpassword">Password</label>
            </div>
          </div>
          <div class="row">
            <div class="modal-close btn waves-effect waves-light right" id="loginsubmit">Submit
              <i class="material-icons right">send</i>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>